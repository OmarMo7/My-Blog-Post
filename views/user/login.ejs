<style>
  html {
    scroll-behavior: smooth;
  }

  /* ---- Base Rules ---- */

  body {
    background: linear-gradient(0deg, rgb(46, 44, 44) 0%, rgb(51, 51, 51) 100%);
    margin: 0;
    top: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Tajawal";

  }

  h1 {
    color: #fff;
  }

  label {
    color: #fff;
  }

  main {
    margin: 10vh 1em 12vh;
  }

  .card {
    background-color: dimgrey;
  }

  /*navbar*/

  nav a:focus {
    outline: none;
    background: rgba(51, 51, 51, 0.467);
    border-radius: 6px;
    text-decoration: none;
  }

  a:hover {
    outline: none;
    background: rgba(51, 51, 51, 0.467);
    border-radius: 6px;
    text-decoration: none;
  }

  nav a:hover {
    background: rgba(63, 63, 63, 0.467);
    color: #fff;
    border-radius: 8px;
    padding: 20px 0px 20px 0px;
    text-decoration: none;
  }

  nav {
    background-color: rgb(27, 26, 26);
    height: 0%;
    width: 100%;
    top: 0;
    left: 0;
    position: relative;
    box-sizing: border-box;
    transition: 0.3s;
    padding: 10px 10px 20px 10px;
    margin: auto;
    animation: rolling 1s linear forwards;
  }

  nav a {

    color: rgb(219, 216, 216);
    padding: 12px 10px;
    text-decoration: none;
    transition: 0.3s;
    margin: 10px;
    font-size: 60px;
    animation: fadingNavContent 1.5s linear forwards;
  }

  #logo {
    font-family: 'Hachi Maru Pop', cursive;
    font-size: 50px;
  }

  /* Footer Styles */

  .page__footer {
    background: #000;
    padding: 4em 0em;
    color: #fff;
    position: absolute;
    bottom: 0px;
    width: 100%;
  }

  .page__footer p {
    color: #fff;
    margin-left: 50px;
  }
</style>

